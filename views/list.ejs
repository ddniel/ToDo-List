<%- include("header") -%>   <!-- Usa toda la informacion del archivo header.ejs-->

    <div class="box" id="heading">
        <h1><%= listTitle %></h1>
    </div>

    <div class="box" >

    <%  newListItems.forEach(function(item){ %>
        <form action="/delete" method="post">
        <div class="item">
          <input type="checkbox" value="<%= item._id %>" onChange="this.form.submit()" name="ckeckbox"> <!--Solo crea el checkbox y chequea si se cliqueo y lo envia en el metodo post del form-->
          <p><%= item.name %></p>
        </div>
        <input type="hidden" name="listName" value="<%= listTitle %>"></input>
        </form>
    <%  }) %>


        <form class="item" action="/" method="post">
          <input type="text" name="newItem" placeholder="New Item" autocomplete="off">
          <button type="submit" name="list" value=<%= listTitle %>>+</button>
        </form>

    </div>


